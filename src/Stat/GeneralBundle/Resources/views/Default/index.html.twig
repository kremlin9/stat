{% extends '::base.html.twig' %}
{% block body %}

<script>
    Highcharts.setOptions({
        global: {
            useUTC: false
        }
    });
</script>

<div class="container">
    <h1>Total stat</h1>
    <div id="new_users_total" style="width:100%; height:400px;"></div>
    <div id="hit_uniq_total" style="width:100%; height:400px;"></div>

    <div id="transactions_total" style="width:100%; height:400px;"></div>
    <div id="money_total" style="width:100%; height:400px;"></div>
    <div id="payers_total" style="width:100%; height:400px;"></div>

    <script>
    $(function () { 
        // New Users total 
        $('#new_users_total').highcharts({
            chart: {
                type: 'line'
            },
            title: {
                text: 'New Users'
            },
            xAxis: {
                type: 'datetime'
            },
            series: [{
                name: 'Users',
                color: '#5da130',
                data: [
                    {% for time, rstat in realtime.total %}
                        [ {{ time }}, {{ rstat.new_users }} ] {% if not loop.last %}, {% endif %}
                    {% endfor %}
                ]}
            ]
        });

        // Hits & Uniqs
        $('#hit_uniq_total').highcharts({
            chart: {
                type: 'line'
            },
            title: {
                text: 'Hits & Uniqs'
            },
            xAxis: {
                type: 'datetime'
            },
            series: [{
                name: 'Hits',
                data: [
                    {% for time, rstat in realtime.total %}
                        [ {{ time }}, {{ rstat.hit }} ] {% if not loop.last %}, {% endif %}
                    {% endfor %}
                ]}, {
                name: 'Uniqs',
                data: [
                    {% for time, rstat in realtime.total %}
                        [ {{ time }}, {{ rstat.uniq }} ] {% if not loop.last %}, {% endif %}
                    {% endfor %}
                ]}
            ]
        });

        // Transactions Total 
        $('#transactions_total').highcharts({
            title: {
                text: 'Transactions'
            },
            xAxis: {
                type: 'datetime'
            },
            series: [{
                name: 'Transactions',
                type: 'column',
                color: '#9c1e1e',
                data: [
                    {% for time, rstat in realtime.total %}
                        [ {{ time }}, {{ rstat.transactions_count }} ] {% if not loop.last %}, {% endif %}
                    {% endfor %}
                ]}
            ]
        });

        // Money
        $('#money_total').highcharts({
            title: {
                text: 'Money'
            },
            xAxis: {
                type: 'datetime'
            },
            series: [{
                name: 'Money',
                type: 'column',
                color: '#9c1e1e',
                data: [
                    {% for time, rstat in realtime.total %}
                        [ {{ time }}, {{ rstat.money }} ] {% if not loop.last %}, {% endif %}
                    {% endfor %}
                ]}
            ]
        });

        // Payers 
        $('#payers_total').highcharts({
            title: {
                text: 'Payers'
            },
            xAxis: {
                type: 'datetime'
            },
            series: [{
                name: 'Payers',
                type: 'column',
                color: '#9c1e1e',
                data: [
                    {% for time, rstat in realtime.total %}
                        [ {{ time }}, {{ rstat.payers }} ] {% if not loop.last %}, {% endif %}
                    {% endfor %}
                ]}
            ]
        });
    });
    </script>


    {% for game, stat in realtime %}
        {% if game != 'total' %}
            <h1>{{ game }}</h1>

            <div id="hit_uniq_{{ game }}" style="width:100%; height:400px;"></div>

            <div id="transactions_{{ game }}" style="width:100%; height:400px;"></div>
            <div id="money_{{ game }}" style="width:100%; height:400px;"></div>
            <div id="payers_{{ game }}" style="width:100%; height:400px;"></div>

            <script>

            // Hits & Uniqs
            $(function () { 
                $('#hit_uniq_{{ game }}').highcharts({
                    chart: {
                        type: 'line'
                    },
                    title: {
                        text: 'Hits & Uniqs'
                    },
                    xAxis: {
                        type: 'datetime'
                    },
                    series: [{
                        name: 'Hits',
                        data: [
                            {% for time, rstat in stat %}
                                [ {{ time }}, {{ rstat.hit }} ] {% if not loop.last %}, {% endif %}
                            {% endfor %}
                        ]}, {
                        name: 'Uniqs',
                        data: [
                            {% for time, rstat in stat %}
                                [ {{ time }}, {{ rstat.uniq }} ] {% if not loop.last %}, {% endif %}
                            {% endfor %}
                        ]}
                    ]
                });
            });


            // Transactions Total 
            $('#transactions_{{ game }}').highcharts({
                title: {
                    text: 'Transactions'
                },
                xAxis: {
                    type: 'datetime'
                },
                series: [{
                    name: 'Transactions',
                    type: 'column',
                    color: '#9c1e1e',
                    data: [
                        {% for time, rstat in stat %}
                            [ {{ time }}, {{ rstat.transactions_count }} ] {% if not loop.last %}, {% endif %}
                        {% endfor %}
                    ]}
                ]
            });

            // Money
            $('#money_{{ game }}').highcharts({
                title: {
                    text: 'Money'
                },
                xAxis: {
                    type: 'datetime'
                },
                series: [{
                    name: 'Money',
                    type: 'column',
                    color: '#9c1e1e',
                    data: [
                        {% for time, rstat in stat %}
                            [ {{ time }}, {{ rstat.money }} ] {% if not loop.last %}, {% endif %}
                        {% endfor %}
                    ]}
                ]
            });

            // Payers 
            $('#payers_{{ game }}').highcharts({
                title: {
                    text: 'Payers'
                },
                xAxis: {
                    type: 'datetime'
                },
                series: [{
                    name: 'Payers',
                    type: 'column',
                    color: '#9c1e1e',
                    data: [
                        {% for time, rstat in stat %}
                            [ {{ time }}, {{ rstat.payers }} ] {% if not loop.last %}, {% endif %}
                        {% endfor %}
                    ]}
                ]
            });
            </script>
        {% endif %}
    {% endfor %}

</div>

{% endblock %}
